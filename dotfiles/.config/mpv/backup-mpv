# Idioma
alang=spa,lat,en  # Prioridad de idiomas de audio (español, latino, inglés)
slang=spa,lat,en  # Prioridad de idiomas de subtítulos (español, latino, inglés)

# Ventana y cursor
cursor-autohide-fs-only  # Oculta el cursor solo en pantalla completa
force-seekable=yes        # Fuerza la reproducción de archivos no seekable
geometry=50%:50%         # Abre la ventana centrada en la pantalla
keep-open=yes            # No cierra el reproductor al terminar la reproducción
force-window=immediate   # Abre la ventana incluso si no se especifica un archivo

# Captura de pantalla
screenshot-format=png               # Guarda capturas de pantalla en formato PNG
screenshot-directory="~/Capturas/"  # Guarda capturas en la carpeta ~/Capturas/

# Vídeo (Optimizado para NVIDIA RTX 4070 Ti)
vo=gpu-next            # Usa la nueva implementación de GPU para mejor rendimiento
profile=gpu-hq         # Activa el perfil de alta calidad para GPU
gpu-api=vulkan         # Usa la API Vulkan para renderizado
gpu-context=x11vk      # Contexto específico para Linux con Vulkan y X11
hwdec=nvdec-copy       # Usa decodificación por hardware de NVIDIA (NVENC)
scale=ewa_lanczossharp # Algoritmo de escalado para vídeo
cscale=ewa_lanczossharp# Algoritmo de escalado para subtítulos
tscale=oversample      # Algoritmo de escalado temporal
interpolation=yes      # Interpola frames para vídeos a baja tasa de refresco
video-sync=display-resample  # Sincroniza el vídeo con la tasa de refresco del monitor
deband=yes             # Aplica desbanding para reducir artefactos de compresión
fs=yes                 # Inicia en pantalla completa
vf=format=yuv420p10le  # Fuerza el uso de YUV 10-bit para mejor calidad de color
cache=yes
cache-secs=300
# Audio (Optimizado para PipeWire y HyperX Cloud Flight Wireless)
audio-channels=2          # Configura 2 canales de audio (estéreo)
audio-samplerate=48000    # Tasa de muestreo de 48 kHz (compatible con tu dispositivo)
audio-format=s16          # Formato de audio de 16-bit (compatible con tu dispositivo)
audio-client-name=mpv     # Nombre del cliente de audio (para PipeWire)
volume=30                 # Establece el volumen inicial al 50%
volume-max=200            # Establece el volumen máximo al 200%
audio-pitch-correction=yes  # Corrige el tono al cambiar la velocidad de reproducción

# Ecualización (ajusta los valores según tus preferencias)
af=lavfi=[loudnorm=I=-16:TP=-1.5:LRA=11]  # Normalización de audio más precisa
af=lavfi=[equalizer=f=31.25:t=q:w=1:g=0]
af=lavfi=[equalizer=f=62.5:t=q:w=1:g=0]
af=lavfi=[equalizer=f=125:t=q:w=1:g=0]
af=lavfi=[equalizer=f=250:t=q:w=1:g=0]
af=lavfi=[equalizer=f=500:t=q:w=1:g=0]
af=lavfi=[equalizer=f=1000:t=q:w=1:g=0]
af=lavfi=[equalizer=f=2000:t=q:w=1:g=0]
af=lavfi=[equalizer=f=4000:t=q:w=1:g=0]
af=lavfi=[equalizer=f=8000:t=q:w=1:g=0]
af=lavfi=[equalizer=f=16000:t=q:w=1:g=0]

# Subtítulos
sub-auto=fuzzy          # Carga automáticamente subtítulos con nombres similares
sub-font-size=24        # Tamaño de fuente de los subtítulos
sub-border-size=2       # Grosor del borde de los subtítulos
sub-color="#FFFFFFFF"   # Color de los subtítulos (blanco)
sub-border-color="#FF000000"  # Color del borde de los subtítulos (negro)

# Rendimiento (Optimizado para i9-13900K y 64 GB RAM)
vulkan-async-compute=yes  # Habilita el cómputo asíncrono en Vulkan
vulkan-queue-count=8      # Aumenta las colas de renderizado para mejor rendimiento
hwdec-codecs=all          # Usa decodificación por hardware para todos los códecs
vd-lavc-threads=24        # Aumenta los hilos para decodificación de vídeo
hr-seek-framedrop=no      # Evita el descarte de frames al buscar

# Tiempo
start=+0:00              # Inicia la reproducción a los 3 minutos y 50 segundos
save-position-on-quit=yes  # Guarda la posición de reproducción al salir
no-pause                 # No pausa automáticamente al cambiar de ventana
ontop=yes                # Mantiene la ventana siempre visible sobre otras
