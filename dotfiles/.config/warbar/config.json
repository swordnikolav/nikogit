{
    "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 40, // Aumentado a 40px para 2K (m√°s visible)
    // "width": 1280, // Waybar width
    "spacing": 6, // Espaciado entre m√≥dulos aumentado a 6px
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "custom/gpt",
        "custom/weather",
        "battery",
        "battery#bat2",
        "sway/mode",
        "sway/scratchpad"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "temperature",
        "pulseaudio",
        "custom/swaync",
        "sway/language",
        "backlight",
        "idle_inhibitor",
        "custom/power"
    ],
    // Modules configuration
    "hyprland/workspaces": {
        "format": "{name}",
        "persistent-workspaces": {
            "*": 3
        }
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "custom/cava": {
        "format" : "Óæù ",
        "tooltip": false,
        "on-click": "kitty -e cava"
    },
    "custom/waypaper": {
        "format": "ÔÄæ ",
        "tooltip": false,
        "on-click": "waypaper"
    },
    "custom/gpt": {
        "format": " ",
        "tooltip": false,
        "on-click": "firefox -P ai --new-window https://chatgpt.com/"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "custom/weather": {
        "exec": "bash ~/.config/scripts/waybar-weather.sh",
        "on-click": "mousam",
        "interval": 600,
        "tooltip": false,
        "signal": 3,
        "format": "{}"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },
    // CPU movido a right, con icono al final y tooltip activado
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": true,
        "tooltip-format": "CPU Usage: {usage}%"
    },
    // Memory movido a right, con icono al final y tooltip activado
    "memory": {
        "format": "{}% ÔÉâ",
        "tooltip": true,
        "tooltip-format": "{used:0.1f}GiB / {total:0.1f}GiB"
    },
    "custom/swaync": {
        "exec": "bash ~/.config/scripts/waybar-swaync.sh",
        "interval": 1,
        "tooltip": false,
        "format": "{} ",
        "on-click": "swaync-client -t"
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ÔÉß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        "interval": 3,
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },	
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon} Ôäî",
        "format-bluetooth-muted": "Ôë¶  {icon} Ôäî",
        "format-muted": "Ôë¶ ",
        "format-source": " {volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ® "]
        },
        "on-click": "pavucontrol"
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format" : " ‚èª ",
        "tooltip": false,
        "on-click": "wlogout -b 4"
    },
    // Temperatura sin cambios
    "temperature": {
        "thermal-zone": 0,
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C Ôãâ",
        "format-critical": "{temperatureC}¬∞C Ôãá",
        "interval": 10
    }
}
