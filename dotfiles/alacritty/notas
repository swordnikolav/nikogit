[keyboard]
bindings = [
  # Pegar desde portapapeles (Ctrl+Shift+V)
  { key = "V",        mods = "Control|Shift", action = "Paste" },
  
  # Copiar al portapapeles (Ctrl+Shift+C)
  { key = "C",        mods = "Control|Shift", action = "Copy" },
  
  # Pegar con tecla dedicada "Paste" (si existe en el teclado)
  { key = "Paste",                            action = "Paste" },
  
  # Copiar con tecla dedicada "Copy" (si existe en el teclado)
  { key = "Copy",                             action = "Copy" },
  
  # Pegar la selección actual (Shift+Insert)
  { key = "Insert",   mods = "Shift",         action = "PasteSelection" },
  
  # Buscar hacia adelante (Ctrl+Shift+F) - No activo en modo búsqueda
  { key = "F",        mods = "Control|Shift", action = "SearchForward",     mode = "~Search" },
  
  # Buscar hacia atrás (Ctrl+Shift+B) - No activo en modo búsqueda
  { key = "B",        mods = "Control|Shift", action = "SearchBackward",    mode = "~Search" },
  
  # Resetear tamaño de fuente (Ctrl+0)
  { key = "Key0",     mods = "Control",       action = "ResetFontSize" },
  
  # Aumentar tamaño de fuente (Ctrl+=)
  { key = "Equals",   mods = "Control",       action = "IncreaseFontSize" },
  
  # Disminuir tamaño de fuente (Ctrl+-)
  { key = "Minus",    mods = "Control",       action = "DecreaseFontSize" },
  
  # Limpiar notificaciones del log (Ctrl+L)
  { key = "L",        mods = "Control",       action = "ClearLogNotice" },
  
  # Enviar form feed (Ctrl+L) - Carácter especial \f
  { key = "L",        mods = "Control",       chars  = "\f" },
  
  # Scroll: Subir una página (Shift+PageUp) - No activo con Alt
  { key = "PageUp",   mods = "Shift",         action = "ScrollPageUp",      mode = "~Alt" },
  
  # Scroll: Bajar una página (Shift+PageDown) - No activo con Alt
  { key = "PageDown", mods = "Shift",         action = "ScrollPageDown",    mode = "~Alt" },
  
  # Scroll: Subir una línea (Shift+Up) - No activo con Alt
  { key = "Up",       mods = "Shift",         action = "ScrollLineUp",      mode = "~Alt" },
  
  # Scroll: Bajar una línea (Shift+Down) - No activo con Alt
  { key = "Down",     mods = "Shift",         action = "ScrollLineDown",    mode = "~Alt" },
  
  # Scroll: Ir al inicio del buffer (Shift+Home) - No activo con Alt
  { key = "Home",     mods = "Shift",         action = "ScrollToTop",       mode = "~Alt" },
  
  # Scroll: Ir al final del buffer (Shift+End) - No activo con Alt
  { key = "End",      mods = "Shift",         action = "ScrollToBottom",    mode = "~Alt" },
]
