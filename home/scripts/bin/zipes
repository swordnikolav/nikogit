#!/bin/sh
#Script para descomprimir todos los ficheros zip de un directorio.
echo "Por favor, ingresa la ruta del directorio que contiene los archivos .zip:"
read directorio

# Verificar si el directorio existe
if [ ! -d "$directorio" ]; then
  echo "El directorio '$directorio' no existe"
  exit 1
fi

# Cambiar al directorio especificado
cd "$directorio"

# Recorrer todos los archivos .zip en el directorio
for archivo in *.zip; do
  if [ -f "$archivo" ]; then
    # Descomprimir el archivo usando bsdtar
    bsdtar -xf "$archivo"
    echo "Se ha descomprimido el archivo $archivo"
  fi
done

echo "La descompresi√≥n de los archivos .zip se ha completado correctamente"
