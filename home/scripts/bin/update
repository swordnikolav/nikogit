#!/bin/sh

if [ $USER != root ]; then
  echo ">> Error: debes ser root"
  echo ">> Terminando la ejecución del script ..."
  exit 0
fi

echo ">> Sincronizando bases de datos de Gentoo ..."
echo
emerge --sync
echo
echo ">> Actualizando el sistema ..."
echo
emerge -auvNDtq @world
echo
echo ">> Wipe de papeleras de usuario, y root ..."
shred -n 30 -uvzf /home/sword/.local/share/Trash/*/** &> /dev/null
shred -n 30 -uvzf /root/.local/share/Trash/*/** &> /dev/null
echo
echo ">> Wipe las imágenes thumbnails ..."
echo
shred -n 30 -uvzf /home/sword/.thumbnails/*/** &> /dev/null
shred -n 30 -uvzf /root/.thumbnails/*/** &> /dev/null
echo
sleep 2
echo ">> Todo Correcto Gentoo RLZ!"
echo
