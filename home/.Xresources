!General config
URxvt*imLocale: es_ES.UTF-8
URxvt*termName: rxvt-unicode-256color
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 0
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.scrollBar_floating: false
URxvt.urgentOnBell: true
URxvt.scrollstyle: rxvt

! special
URxvt.foreground: #DADAE8
URxvt.background: #1E1E29
URxvt.cursorColor: #B1E3AD

! black
URxvt.color0: #6E6C7E
URxvt.color8: #6E6C7E

! red
URxvt.color1: #E38C8F
URxvt.color9: #E38C8F

! green
URxvt.color2: #B1E3AD
URxvt.color10: #B1E3AD

! yellow
URxvt.color3: #EBDDAA
URxvt.color11: #EBDDAA

! blue
URxvt.color4: #A4B9EF
URxvt.color12: #A4B9EF

! magenta
URxvt.color5: #C6AAE8
URxvt.color13: #C6AAE8

! cyan
URxvt.color6: #E5B4E2
URxvt.color14: #E5B4E2

! white
URxvt.color7: #DADAE8
URxvt.color15: #DADAE8

!Trasparencia
urxvt*depth: 32
urxvt*transparent: true
urxvt*shading: 30
URxvt*inheritPixmap: true

!Configuración de fuentes
*.font: xft:mononoki:style=Regular:pixelsize=22:pango 
Xft.dpi: 96
Xft.autohint: 0 
Xft.lcdfilter: lcddefault 
Xft.hintstyle: hintfull
Xft.hinting: 1 
Xft.antialias: 1 
Xft.rgba: rgb

!Configuración del movimiento entre lineas
URxvt*keysym.Control-Left: \033[1;5D 
URxvt*keysym.Control-Right: \033[1;5C 

!Configuración del cursor
Xcursor.theme: Vimix-white-cursors
Xcursor.size: 16

!Configuración para NSXI
Nsxiv.window.background: #d3d7cf
Nsxiv.window.foreground: #ffffff
Nsxiv.font: mononoki

!Copy Paste & Other Extensions
!URxvt.perl-ext-common: default,paste_clipboard,selection-to-clipboard,matcher,keyboard-select,font-size
!URxvt.keysym.M-u:      perl:url-select:select_next
URxvt.url-launcher:    /usr/bin/opera
URxvt.underlineURLs:   True
URxvt.matcher.button:  1 
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt*disableBracketedPaste: true
URxvt.clipboard.autocopy: true
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show
URxvt.keysym.Control-meta-c: builtin-string:
URxvt.keysym.Control-meta-v: builtin-string:
URxvt.keysym.Control-V: eval:paste_clipboard
URxvt.keysym.Control-C: eval:selection_to_clipboard


doas ip a add 192.168.8.2/24 dev eno2 && doas ip link set eno2 up && doas ip route add default via 192.168.8.1 dev eno2

bongocat > /dev/null 2>&1 & 

! Tema Dark para xterm: Fondo negro, texto blanco, colores ANSI para código
xterm*background: #000000
xterm*foreground: #ffffff

! Paleta ANSI básica (color0-7: normales, color8-15: brillantes)
xterm*color0: #000000
xterm*color1: #aa0000
xterm*color2: #00aa00
xterm*color3: #aa5500
xterm*color4: #0000aa
xterm*color5: #aa00aa
xterm*color6: #00aaaa
xterm*color7: #aaaaaa

xterm*color8: #555555
xterm*color9: #ff5555
xterm*color10: #55ff55
xterm*color11: #ffff55
xterm*color12: #5555ff
xterm*color13: #ff55ff
xterm*color14: #55ffff
xterm*color15: #ffffff

! Soporte para 256 colores (para sintaxis avanzada en editores)
xterm*termName: xterm-256color

! Cursor y puntero
xterm*cursorColor: #ffffff
xterm*pointerColor: #ffffff
xterm*selectToClipboard: false

! Fuente (usa fixed si no tienes mononoki; o instala)
xterm*faceName: fixed
xterm*faceSize: 12


