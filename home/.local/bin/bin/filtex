#!/bin/sh

# Check if the user provided a directory as an argument
if [ $# -ne 1 ]; then
    echo "Usage: $0 <directory>"
    exit 1
fi

directory=$1

# Check if the directory exists
if [ ! -d "$directory" ]; then
    echo "Directory not found: $directory"
    exit 1
fi

# Prompt the user for the text to filter
echo "Enter the text to filter:"
read filter_text

# Use grep to filter text within the directory
grep -r "$filter_text" "$directory"
