#!/bin/sh
# Script para pasar todos los ficheros de video, a otro formato. 
process() {
        local mkv;mp4="$1"
        echo Processing "$avi ..."
        ffmpeg -i "$*" -vcodec h264_nvenc -acodec mp2 "$*.avi"
        echo "Waiting to delete the original file: $avi"
        sleep 5
        rm -rf "$mkv"
        echo Remaining MP4 count = $(find . -name "*.mkv" | wc -l)
        echo "OK!"
        sleep 1
}
 
export -f process
 
find . -name "*.*" -type f -exec bash -c 'process "{}"' \;
